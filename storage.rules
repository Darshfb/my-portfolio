rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to project images and resumes
    // Allow authenticated users (Admin) to upload/delete
    match /projects/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /resumes/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
